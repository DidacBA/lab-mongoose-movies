<div class="database-index-container">
  <h2>Edit movie</h2>
  <form class="form" action="/movies/<%= movie.id %>" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= movie.title %>">
    <label for="genre">Genre</label>
    <input type="text" name="genre" value="<%= movie.genre %>">
    <label for="plot">Plot</label>
    <input type="text" name="plot" value="<%= movie.plot %>">
    <input type="submit" value="Submit" class="button submit-button">
  </form>
  <a href="/movies/<%= movie.id %>" class="button">Go back to details</a>
  <a href="/movies" class="button">Go back to movie list</a>
</div>