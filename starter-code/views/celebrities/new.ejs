<div class="database-index-container">  
  <h2>Add a new celebrity!</h2>
  <form class="form" action="/celebrities" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name">
    <label for="occupation">Occupation</label>
    <input type="text" name="occupation">
    <label for="catchPhrase">Catch Phrase</label>
    <input type="text" name="catchPhrase">
    <input type="submit" value="Submit" class="button submit-button">
  </form>
  <a href="/celebrities" class="button">Go Back</a>
</div>